<div id="detail_recipe">

	<div id="top_left">
		<div id="detail_recipe_image">
			<%= image_tag(@recipe.image) %>
		</div>
	</div>

	<div id="top_right">
		<div id="detail_recipe_title"><h2><%= @recipe.title %></h2></div>
		<div id="detail_recipe_summary"></div>
		<div id="detail_recipe_description"></div>
	</div>

	<div id="botom_left">
		<div id="detail_recipe_directions">
			<ul>
	  			<% @recipe.steps.each do |step| %>
	    		<li><%= step.description %></li>
			</ul>
		</div>
		<div id="detail_recipe_time"></div>
			<ul>
	    		<li><%= step.time %></li>
	  			<% end %>
			</ul>
	</div>

	<div id="bottom_right">
		<div id="ads"></div>
	</div>
</div>