<div id="detail_recipe">
	<div id="top_left">
		<div id="detail_recipe_image">
			<%= image_tag(@recipe.image) %>
		</div>
	</div>

	<div id="top_right">
		<div id="detail_recipe_title">
			<h2><%= @recipe.title %></h2>
		</div>
		<div id="detail">
			<div id="detail_recipe_summary">
				<ul class="sum_list">
					<li><%= @recipe.group %></li>
					<li><%= @recipe.difficulty %></li>
					<li><%= @recipe.total_time_minutes %></li>
				</ul>
			</div>
			<div id="detail_recipe_description">
				<ul class="ingredients">
					<% @recipe.ingredients.each do |ingredient| %>
					  <li><%= ingredient.ingredient_description %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>


<div id="bottom">
	<div id="bottom_left">
		<ul>
  			<% @recipe.steps.each do |step| %>
    			<li>
    				<div class="detail_description">
    					<%= step.description %>
    				</div>
					<div class="timer">
						<span class="runner"><%= step.time %></span>
						<span class="start">Start</span>
					</div>
    			</li>
    		<% end %>
		</ul>
	</div>

	<div id="bottom_right">
		~pub~
	</div>
</div>
