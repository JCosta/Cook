<div id="uvp_first_page">
  Receitas rápidas e saudáveis, sempre no ponto.
</div>

<div id="sugestion">
    <% @recipes.each do |recipe| %>
    <div id="box_recipe"> 
      <div id="box_recipe_image">
        <%= link_to image_tag(recipe.image), recipe_path(recipe.id) %>
      </div>
      <div id="box_recipe_title">
        <%= link_to recipe.title, recipe_path(recipe.id) %>
      </div>
      <div id="box_recipe_total_time">
        Tempo: <%= recipe.total_time_minutes %>
      </div>
      <div id="box_recipe_ingredients">
        <ul>
          <% recipe.ingredients.each do |ingredient| %>
            <li><%= ingredient.ingredient_group %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

</div>