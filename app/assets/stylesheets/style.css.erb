*{box-sizing: border-box;}
body{
	background-image: url(<%= asset_path 'pagina_template.png' %>);
	background-size: 100%;
	background-repeat: no-repeat;
	margin: 0;
}

#detail_recipe
{
	overflow: hidden;
}

a{
	text-decoration: none;
}

#menu{
	height: 100px;
	width: 100%;
	background-color: #FFF;
	line-height: 100px;
}

#uvp_first_page{
	width: 300px;
	margin-left: 200px;
	margin-top: 100px;
	font-family: Helvetica;
	font-size: 35px;
	color: #FFF;
}

#top_left{

	float: left;
	width: 30%;
}

#top_right{
	float: left;
	width: 70%;
}

#detail_recipe_title{
	padding-top: 80px;
	font-family: helvetica;
	font-size: 20px;
}

#detail{
	overflow: hidden;
}

#detail_recipe_summary{
	float: left;
	width: 40%;
}

#detail_recipe_description{
	float: left;
	width: 60%;
}

#bottom{
	overflow: hidden;
}

#bottom > div{
	float: left;
}

#bottom_left{
	width: 80%;
}

#bottom_right{
	width: 20%;
}
li
{
	overflow: hidden;
}
.detail_description
{
	float: left;
	width: 65%;
	background-color: gray;
}
.detail_recipe_time
{
	float: left;
	width: 15%;
	background-color: blue;
}
.timer{
	float: left;
	width: 20%;
	background-color: white;
	text-align: center;
}
.runner
{
	font-family: arial;
	font-weight: bold;
}
.start
{
	padding-left: 10px;
	background-color: red;
	font-family: Impallari;
}
#bottom li{
	list-style: none;
}
#bottom ul{ padding-left: 0px;}
#page{
	margin: 0 auto;
	width: 1000px;
}

#sugestion{
	width: 875px;
	height: 400px;
	border-bottom: 1px solid #999;
	margin-left: 200px;
	margin-top: 20px;
	font-family: Helvetica;	
}

#box_recipe{
	width: 200px;
	height: 400px;
	border: 1px solid #999;
	float: left;
	margin-right: 16px;
}

#box_recipe_image{
	width: 200px;
	height: 200px;
	border-radius: 20px;
}

#box_recipe_title{
	line-height: 30px;
	font-size: 18px;
	text-align: center;
}

#box_recipe_total_time{
	padding-left: 20px;
	font-weight: bold;
}
