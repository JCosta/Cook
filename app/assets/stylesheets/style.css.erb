*{box-sizing: border-box;}
body{
	background-image: url(<%= asset_path 'pagina_template.png' %>);
	background-size: 100%;
	background-repeat: no-repeat;
	margin: 0;
}

#detail_recipe
{
	overflow: hidden;
}

a{
	text-decoration: none;
}

#menu{
	margin-left: 590px;
	font-family: Helvetica;
}

#menu img{
	padding-top: 10px;
	}

nav ul ul ul {
	position: absolute; left: 100%; top:0;
}

nav ul ul ul li a {
	width: 140px;
	height: 50px;
}

nav ul ul {
	background: #5f6975; border-radius: 0px; padding: 0;
	position: absolute; top: 100%;
}

nav ul ul li {
	float: none; 
	border-top: 1px solid #6b727c;
	border-bottom: 1px solid #575f6a;
	position: relative;
}

nav ul ul li a {
	background: #5f6975;
	padding: 15px 40px;
	color: #fff;
}

nav ul ul li a:hover {
	color: #757575;
	background: #fff;
}

nav ul {
	background: #fff; 
	padding: 0 20px;
	border-radius: 10px;  
	list-style: none;
	position: relative;
	display: inline-table;
}
	nav ul:after {
		content: ""; clear: both; display: block;
	}

nav ul ul {
	display: none;
}

nav ul li:hover > ul {
	display: block;
}

nav ul li {
	float: left;
}

nav ul li:hover {
	background-color: #fff;
}
	
nav ul li a {
	display: block; 
	padding: 25px 40px;
	color: #757575;
	text-decoration: none;
}

nav ul li a:hover {
  color: #757575;
  background-color: #fff;
}

