body{
	background-image: url(<%= asset_path 'pagina_template.png' %>);
	background-size: 100%;
	background-repeat: no-repeat;
	margin: 0;
}

a{
	text-decoration: none;
}

#menu{
	height: 100px;
	width: 100%;
	background-color: #FFF;
	line-height: 100px;
}

#uvp_first_page{
	width: 300px;
	margin-left: 200px;
	margin-top: 100px;
	font-family: Helvetica;
	font-size: 35px;
	color: #FFF;
}

#sugestion{
	width: 875px;
	height: 400px;
	border-bottom: 1px solid #999;
	margin-left: 200px;
	margin-top: 20px;
	font-family: Helvetica;	
}

#box_recipe{
	width: 200px;
	height: 400px;
	border: 1px solid #999;
	float: left;
	margin-right: 16px;
}

#box_recipe_image{
	width: 200px;
	height: 200px;
	border-radius: 20px;
}

#box_recipe_title{
	line-height: 30px;
	font-size: 18px;
	text-align: center;
}

#box_recipe_total_time{
	padding-left: 20px;
	font-weight: bold;
}